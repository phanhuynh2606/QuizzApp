<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvQuestionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question 1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            tools:text="Question 1" />

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Question text goes here"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="4dp"
            tools:text="What is the main purpose of an Activity in Android development?" />

        <!-- Answer Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <!-- Option A -->
            <LinearLayout
                android:id="@+id/llOptionA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_subject_tag"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvResultA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:minWidth="24dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvOptionA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Option A text"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    tools:text="To handle user interface components" />

                <TextView
                    android:id="@+id/tvStatusA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Option B -->
            <LinearLayout
                android:id="@+id/llOptionB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_subject_tag"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvResultB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:minWidth="24dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvOptionB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Option B text"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    tools:text="To manage database operations" />

                <TextView
                    android:id="@+id/tvStatusB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Option C -->
            <LinearLayout
                android:id="@+id/llOptionC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_subject_tag"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvResultC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:minWidth="24dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvOptionC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Option C text"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    tools:text="To handle network communication" />

                <TextView
                    android:id="@+id/tvStatusC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Option D -->
            <LinearLayout
                android:id="@+id/llOptionD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_subject_tag"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvResultD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:minWidth="24dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvOptionD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Option D text"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    tools:text="To manage application lifecycle" />

                <TextView
                    android:id="@+id/tvStatusD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
