<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".activities.QuizTakeActivity">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?attr/colorPrimary"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvQuizTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quiz Title"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Android Development Quiz" />

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_subject_tag"
            android:padding="8dp"
            android:text="15:00"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="14:23" />

    </LinearLayout>

    <!-- Progress Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvQuestionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question 1 of 10"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            tools:text="Question 3 of 10" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:progress="30"
            android:progressTint="@color/green"
            android:max="100" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30%"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            tools:text="30%" />

    </LinearLayout>

    <!-- Question Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question text goes here"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp"
                tools:text="What is the main purpose of an Activity in Android development?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbOptionA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:padding="12dp"
                        android:background="@drawable/bg_subject_tag"
                        android:text="Option A"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        tools:text="A) To handle user interface components" />

                    <RadioButton
                        android:id="@+id/rbOptionB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:padding="12dp"
                        android:background="@drawable/bg_subject_tag"
                        android:text="Option B"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        tools:text="B) To manage database operations" />

                    <RadioButton
                        android:id="@+id/rbOptionC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:padding="12dp"
                        android:background="@drawable/bg_subject_tag"
                        android:text="Option C"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        tools:text="C) To handle network requests" />

                    <RadioButton
                        android:id="@+id/rbOptionD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:background="@drawable/bg_subject_tag"
                        android:text="Option D"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        tools:text="D) To provide background services" />

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Previous"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:enabled="false" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Next"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_subject_tag"
            android:padding="12dp" />

    </LinearLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Submit Quiz"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_subject_tag"
        android:padding="16dp"
        android:visibility="gone" />

    <!-- Bottom Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:gravity="bottom">

        <TextView
            android:id="@+id/tvAnsweredQuestions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Answered: 2/10"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            tools:text="Answered: 2/10" />

        <TextView
            android:id="@+id/tvRemainingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time remaining: 14:23"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            tools:text="Time remaining: 14:23" />

    </LinearLayout>

</LinearLayout>
