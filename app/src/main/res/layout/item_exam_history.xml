<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Subject Code -->
            <TextView
                android:id="@+id/textSubjectCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MLN122"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color" />

            <!-- Exam Type Badge -->
            <TextView
                android:id="@+id/textExamType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_exam_type_badge"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="QUIZ"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Score and Questions Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <!-- Score -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_color" />

            </LinearLayout>

            <!-- Questions Info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textCorrectAnswers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/correct_answer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp" />

                <TextView
                    android:id="@+id/textTotalQuestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" questions"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginLeft="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Time and Date Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <!-- Time Spent -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

<!--                <ImageView-->
<!--                    android:layout_width="16dp"-->
<!--                    android:layout_height="16dp"-->
<!--                    android:src="@drawable/ic_time"-->
<!--                    android:tint="@color/text_secondary" />-->

                <TextView
                    android:id="@+id/textTimeSpent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="49s"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginLeft="4dp" />

            </LinearLayout>

            <!-- Date -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

<!--                <ImageView-->
<!--                    android:layout_width="16dp"-->
<!--                    android:layout_height="16dp"-->
<!--                    android:src="@drawable/ic_calendar"-->
<!--                    android:tint="@color/text_secondary" />-->

                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jul 15, 2025"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginLeft="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Status Indicator -->
        <View
            android:id="@+id/statusIndicator"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/accent_color"
            android:layout_marginTop="12dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>